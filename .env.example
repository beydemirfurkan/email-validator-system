# Server Configuration
PORT=4444
NODE_ENV=development

# Database Configuration
DATABASE_URL=./database/database.sqlite

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-please
JWT_EXPIRES_IN=24h

# Rate Limiting
DEFAULT_RATE_LIMIT=100
API_KEY_RATE_LIMIT=1000

# Plan Limits (Override defaults)
FREE_MONTHLY_LIMIT=100
FREE_DAILY_LIMIT=10
STARTER_MONTHLY_LIMIT=5000
STARTER_DAILY_LIMIT=500
PRO_MONTHLY_LIMIT=25000
PRO_DAILY_LIMIT=2000
ENTERPRISE_MONTHLY_LIMIT=100000
ENTERPRISE_DAILY_LIMIT=10000

# Features
ENABLE_CONTACT_LISTS=true
ENABLE_BULK_VALIDATION=true
ENABLE_CSV_EXPORT=true
ENABLE_WEBHOOKS=true

# File Upload
MAX_FILE_SIZE=100MB
ALLOWED_FILE_TYPES=csv,xlsx,xls

# Email Configuration (for notifications)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
FROM_EMAIL=noreply@emailvalidator.com