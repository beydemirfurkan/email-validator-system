{
  "watch": [
    "app.js",
    "config/",
    "routes/",
    "services/",
    "middleware/"
  ],
  "ignore": [
    "data/",
    "uploads/",
    "exports/",
    "logs/",
    "node_modules/",
    "*.log",
    "*.csv",
    "*.xlsx",
    "*.json.backup",
    "cache/"
  ],
  "ext": "js,json",
  "delay": 2000,
  "env": {
    "NODE_ENV": "development"
  }
}