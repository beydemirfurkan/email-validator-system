# Production Environment Variables for Railway

# Application
NODE_ENV=production
PORT=4444
JWT_SECRET=your-super-secure-jwt-secret-change-this-in-production

# Database (Railway PostgreSQL - Railway provides DATABASE_URL automatically)
DATABASE_URL=postgresql://postgres:password@host:5432/railway

# Upstash Redis Cache
UPSTASH_REDIS_REST_URL=https://your-upstash-redis-url
UPSTASH_REDIS_REST_TOKEN=your-upstash-redis-token

# API Configuration
API_RATE_LIMIT_WINDOW_MS=60000
API_RATE_LIMIT_MAX_REQUESTS=100
API_RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# Security
ALLOWED_ORIGINS=https://your-frontend-domain.com,https://your-app.com
CORS_CREDENTIALS=true

# File Processing
MAX_FILE_SIZE_MB=10
UPLOAD_PATH=/tmp/uploads
BATCH_PROCESSING_LIMIT=10000

# Email Validation
DEFAULT_TIMEOUT_MS=5000
MAX_CONCURRENT_VALIDATIONS=50

# Monitoring & Logging
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true
ENABLE_PERFORMANCE_MONITORING=true