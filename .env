# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/email_validator

# Upstash Redis Cache (Optional)
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=24h

# Server Configuration
PORT=4444

# SMTP Validation Configuration
ENABLE_SMTP_VALIDATION=false

# SMTP Pool Configuration - Comma separated lists
# HELO Domains Pool (rotated for better deliverability)
SMTP_HELO_DOMAINS=mail.yourdomain.com,smtp.yourdomain.com,relay.yourdomain.com

# FROM Addresses Pool (rotated to avoid rate limiting)
SMTP_FROM_ADDRESSES=verify@yourdomain.com,test@yourdomain.com,check@yourdomain.com

# SMTP Connection Settings
SMTP_CONNECT_TIMEOUT=15000
SMTP_READ_TIMEOUT=15000
SMTP_MAX_RETRIES=2

# SMTP Connection Pooling
SMTP_MAX_CONNECTIONS_PER_POOL=3
SMTP_MAX_IDLE_TIME=60000
SMTP_ENABLE_POOLING=true

# SMTP Behavior
SMTP_STARTTLS=auto
SMTP_VERBOSE=false

# Development/Production Settings
NODE_ENV=development

# Example Production Configuration:
# SMTP_HELO_DOMAINS=mail.company.com,smtp.company.com,outbound.company.com
# SMTP_FROM_ADDRESSES=verify@company.com,validation@company.com,check@company.com,noreply@company.com
# SMTP_VERBOSE=false
# SMTP_MAX_RETRIES=3
# ENABLE_SMTP_VALIDATION=true